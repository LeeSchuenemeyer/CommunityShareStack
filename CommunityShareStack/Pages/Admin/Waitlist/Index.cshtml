@page
@model CommunityShareStack.Pages.Admin.Waitlist.IndexModel
@{
    ViewData["Title"] = "Waitlist Management";
}

<h1>Waitlist Management</h1>

@if (!string.IsNullOrWhiteSpace(Model.StatusMessage))
{
    <div class="alert alert-info">@Model.StatusMessage</div>
}

@if (Model.Waitlists.Count == 0)
{
    <p class="text-muted">No active waitlists.</p>
}
else
{
    @foreach (var group in Model.Waitlists)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5>@group.ItemTitle</h5>
                <form method="post" asp-page-handler="NotifyNext" class="mb-2">
                    <input type="hidden" name="itemId" value="@group.ItemId" />
                    <button type="submit" class="btn btn-sm btn-outline-secondary">Notify Next</button>
                </form>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>User</th>
                            <th>Requested</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var hold in group.Holds)
                    {
                        <tr>
                            <td>@hold.Position</td>
                            <td>@hold.UserEmail</td>
                            <td>@hold.RequestedAt.ToLocalTime().ToString("g")</td>
                            <td>
                                <form method="post" asp-page-handler="Move" class="d-inline">
                                    <input type="hidden" name="holdId" value="@hold.Id" />
                                    <input type="hidden" name="direction" value="up" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Up</button>
                                </form>
                                <form method="post" asp-page-handler="Move" class="d-inline">
                                    <input type="hidden" name="holdId" value="@hold.Id" />
                                    <input type="hidden" name="direction" value="down" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Down</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
