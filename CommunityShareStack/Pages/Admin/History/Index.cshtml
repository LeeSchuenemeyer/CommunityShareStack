@page
@model CommunityShareStack.Pages.Admin.History.IndexModel
@{
    ViewData["Title"] = "Loan History";
}

<h1>Loan History</h1>

<form method="get" class="mb-3">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="UserEmail">User Email</label>
            <input asp-for="UserEmail" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ItemId">Item ID</label>
            <input asp-for="ItemId" class="form-control" />
        </div>
    </div>
    <button type="submit" class="btn btn-secondary">Filter</button>
    <a asp-page="./Index" class="btn btn-light">Clear</a>
</form>

@if (Model.Loans.Count == 0)
{
    <p class="text-muted">No loans found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item</th>
                <th>User</th>
                <th>Checked Out</th>
                <th>Due</th>
                <th>Returned</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var loan in Model.Loans)
        {
            <tr>
                <td>@loan.Item?.Title</td>
                <td>@loan.User?.Email</td>
                <td>@loan.CheckedOutAt.ToLocalTime().ToString("g")</td>
                <td>@loan.DueAt.ToLocalTime().ToString("d")</td>
                <td>@(loan.ReturnedAt.HasValue ? loan.ReturnedAt.Value.ToLocalTime().ToString("g") : "-")</td>
                <td>@loan.Status</td>
            </tr>
        }
        </tbody>
    </table>
}
