@page "{id:int}"
@model CommunityShareStack.Pages.Items.DeleteModel
@{
    ViewData["Title"] = "Delete Item";
}

<h1>Delete Item</h1>

<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.Item.Title</strong>?
</div>

<form method="post">
    <input type="hidden" asp-for="Item.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Details" asp-route-id="@Model.Item.Id" class="btn btn-secondary">Cancel</a>
</form>
