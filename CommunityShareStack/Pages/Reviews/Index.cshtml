@page
@model CommunityShareStack.Pages.Reviews.IndexModel
@{
    ViewData["Title"] = "Reviews";
}

<h1>Reviews</h1>

<form method="get" class="mb-3">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Category">Category</label>
            <input asp-for="Category" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Rating">Rating (0-4)</label>
            <select asp-for="Rating" class="form-control">
                <option value="">All</option>
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-secondary">Filter</button>
    <a asp-page="./Index" class="btn btn-light">Clear</a>
</form>

@if (Model.Items.Count == 0)
{
    <p>No reviews found.</p>
}
else
{
    @foreach (var item in Model.Items)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text text-muted">@item.Category</p>
                <a asp-page="/Items/Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">View Item</a>
            </div>
            <ul class="list-group list-group-flush">
            @foreach (var review in item.Reviews)
            {
                <li class="list-group-item">
                    <strong>
                        @if (review.User != null && review.User.ShowNicknameOnly && !string.IsNullOrWhiteSpace(review.User.Nickname))
                        {
                            @review.User.Nickname
                        }
                        else if (review.User != null && !string.IsNullOrWhiteSpace(review.User.FullName))
                        {
                            @review.User.FullName
                        }
                        else
                        {
                            @review.User?.Email
                        }
                    </strong>
                    <span class="text-muted">(@review.CreatedAt.ToLocalTime().ToString("g"))</span>
                    <div class="review-stars">
                        @for (var i = 0; i < 4; i++)
                        {
                            <span>@(i < review.Rating ? "★" : "☆")</span>
                        }
                    </div>
                    <div>@review.Comment</div>
                </li>
            }
            </ul>
        </div>
    }
}
